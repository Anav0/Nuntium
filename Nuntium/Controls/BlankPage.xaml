<local:BasePage 
             x:Class="Nuntium.BlankPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nuntium"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             >

    <StackPanel Orientation="Horizontal" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center">
        <TextBlock Text="Nie wybrano żadnej wiadomości" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   FontSize="{StaticResource FontSizeBigger}"
                   Foreground="{StaticResource SideForegroundColorBrush}"
                   Padding="8"
                   />
        <TextBlock 
            FontFamily="{StaticResource FontAwesome}"
            Text="{StaticResource FontAwesomeSadEmoji}"
            FontSize="{StaticResource FontSizeXXL}"
            Foreground="{StaticResource AccentLightColorBrush}"
            Padding="8"

            />
    </StackPanel>
</local:BasePage>
